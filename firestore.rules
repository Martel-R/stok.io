
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer usuário autenticado leia e escreva em qualquer coleção.
    // ATENÇÃO: Para produção, você deve restringir o acesso com base nas funções do usuário.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
